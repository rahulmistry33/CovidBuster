<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %> 
<body> 
    <%- include('./partials/nav.ejs') %> 
    <div class="container">
        <h1 class="mb-4"> Read Articles Related to Covid </h1>
        <a href="/newArticle" class="btn btn-success"> New Article</a>
        <% articles.forEach(article =>{ %>
            <div class="card mt-4">
                <div class="card-body">
                    <h4 class="card-title"><%= article.title %></h4>
                    <div class="card-subtitle text-muted mb-2">
                        <%= article.createdAt.toLocaleDateString() %>
                    </div>

                    <div id="readmore">
                        <a href="/articles/<%= article.id %>" id="readmore" class="btn btn-secondary">Read More</a>
                    </div>

                    <div id="delete">
                        <form id="delele"  action="/articles/<%= article.id %>?_method=DELETE" method="POST">
                            <button id="delete" type="submit" class="btn btn-danger">Delete </button>
                        </form>
                    </div>
                    
                </div>
            </div>
        <% }) %>
    </div>
</body>
</html>